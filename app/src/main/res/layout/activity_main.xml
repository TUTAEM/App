<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lilly.tcp_clientsocket.MainActivity"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="집진기 제어 APP"
                android:textSize="28dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/power"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/power_off" />
                <TextView
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:text="자동 운전 중 or 수동"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:textSize="24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rpm"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/rpm_off"
                    />
                <TextView
                    android:id="@+id/rpm_text"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:text="2,500 RPM"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:textSize="24dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/button"
                    android:layout_width="200dp"
                    android:layout_height="56dp"
                    android:text="운전 상태"
                    android:enabled="true"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/alert_image"
                android:src="@drawable/alert_0"
                />
            <TextView
                android:id="@+id/alert_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="이상상태 내용 표시"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:textSize="24dp"/>
        </LinearLayout>
    </LinearLayout>

